#!/bin/bash

die() {
	echo "$*" 1>&2
	exit 1
}

usage() {
	die "usage: sphere-role is-master|is-slave|is-unpaired|role|master"
}

master() {
	sphere-config | jq -r .masterNodeId
}

role() {
	serial=$(sphere-serial)
	master=$(master)
	if test -n "$master"; then
		if test "$serial" == "$master"; then
			echo master
		else
			echo slave
		fi
	else
		echo unpaired
	fi
}

verbose_equals() {
	local expected=$1
	local actual=$2

	if test "$expected" = "$actual"; then
		echo "true"
		true
	else
		echo "false"
		false
	fi
}

is-slave() {
	verbose_equals "$(role)" "slave"
}

is-master() {
	verbose_equals "$(role)" "master"
}

is-unpaired() {
	verbose_equals "$(role)" "unpaired"
}

main() {
	cmd=$1
	shift 1
	case "$cmd" in
		is-slave|is-master|is-unpaired|role|master)
			"$cmd" "$@"
		;;
		*)
			usage
		;;
	esac
}

main "$@"